<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center">
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="320dp"
        android:background="@drawable/log_bg_02"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:src="@drawable/ico_close"/>

        <TextView
            android:id="@+id/tv_bind_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/color_02b6bc"
            android:text="Create a new account that you will bind to:"
            android:textStyle="italic"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <EditText
                android:id="@+id/et_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transaction"
                android:hint="Username"
                android:inputType="text"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_account"
                android:textColor="@color/black" />

            <View
                android:background="#645E5E"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transaction"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:drawableLeft="@drawable/ic_pwd"
                    android:drawablePadding="5dp"
                    android:textColor="@color/black" />

                <ToggleButton
                    android:id="@+id/pwd_toggle"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/eyes_open"
                    android:layout_marginRight="10dp"
                    android:textOn=""
                    android:textOff=""/>
            </RelativeLayout>


        </LinearLayout>



        <TextView
            android:id="@+id/tv_bind"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="26dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/select"
            android:text="Bind"
            style="@style/customButton"/>

    </LinearLayout>


</LinearLayout>