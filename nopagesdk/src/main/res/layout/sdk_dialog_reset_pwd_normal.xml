<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="340dp"
        android:background="@drawable/log_bg_02"
        android:padding="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="6dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:tint="@color/color_02b6bc"
                android:src="@drawable/ic_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Reset Password"
                android:textColor="@color/color_02b6bc"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <EditText
                    android:id="@+id/et_account"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/transaction"
                    android:hint="Your account"
                    android:ellipsize="end"
                    android:drawablePadding="10dp"
                    android:inputType="text"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:drawableLeft="@drawable/ic_account"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/btn_send_verification_code"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/select"
                    android:padding="4dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:text="Send the Code"/>

            </LinearLayout>

            <View
                android:background="#645E5E"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <EditText
                android:id="@+id/et_verification_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transaction"
                android:hint="Verification code"
                android:drawablePadding="10dp"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/ic_pwd"
                android:textColor="@color/black" />

            <View
                android:background="#645E5E"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <EditText
                android:id="@+id/et_new_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transaction"
                android:hint="New password"
                android:drawablePadding="10dp"
                android:inputType="textPassword"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:drawableLeft="@drawable/ic_pwd"
                android:textColor="@color/black" />

            <View
                android:background="#645E5E"
                android:layout_width="match_parent"
                android:layout_height="1px"/>


            <EditText
                android:id="@+id/et_new_pwd_repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transaction"
                android:hint="Repeat the password"
                android:drawablePadding="10dp"
                android:inputType="textPassword"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:drawableLeft="@drawable/ic_pwd"
                android:textColor="@color/black" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_reset"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/select"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="Reset"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            style="@style/customButton"/>

    </LinearLayout>


</LinearLayout>