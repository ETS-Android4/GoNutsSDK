<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="300dp"
        android:background="@drawable/log_bg_02"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:tint="@color/color_02b6bc"
                android:src="@drawable/ic_back"/>

            <TextView
                android:id="@+id/tv_auto_generation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autogeneration"
                android:layout_centerVertical="true"
                android:textColor="@color/blue"
                android:padding="4dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Create an account"
                android:textColor="@color/color_02b6bc"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <EditText
                android:id="@+id/et_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transaction"
                android:hint="Username"
                android:inputType="text"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_account"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/gray"/>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transaction"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:drawableLeft="@drawable/ic_pwd"
                    android:drawablePadding="5dp"
                    android:textColor="@color/black" />

                <ToggleButton
                    android:id="@+id/pwd_toggle1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/eyes_open"
                    android:layout_marginRight="10dp"
                    android:textOn=""
                    android:textOff=""/>

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/gray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/et_repeat_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transaction"
                    android:hint="Repeat password"
                    android:drawablePadding="5dp"
                    android:inputType="textPassword"
                    android:drawableLeft="@drawable/ic_pwd"
                    android:textColor="@color/black" />

                <ToggleButton
                    android:id="@+id/pwd_toggle2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/eyes_open"
                    android:layout_marginRight="10dp"
                    android:textOn=""
                    android:textOff=""/>

            </RelativeLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="26dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/select"
            android:text="Sign up"
            style="@style/customButton"/>

    </LinearLayout>


</LinearLayout>